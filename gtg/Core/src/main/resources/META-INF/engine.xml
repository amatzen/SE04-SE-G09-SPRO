<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.osgi.org/xmlns/scr/v1.1.0" name="dk.sdu.mmmi.swe.gtg.core.internal.managers.Engine">
    <implementation class="dk.sdu.mmmi.swe.gtg.core.internal.managers.Engine"/>
    
    <service>
        <provide interface="dk.sdu.mmmi.swe.gtg.common.services.managers.IEngine"/>
    </service>

    <reference bind="setSystemManager" cardinality="1..1"
               interface="dk.sdu.mmmi.swe.gtg.common.services.managers.ISystemManager"
               name="ISystemManager" policy="dynamic" unbind="removeSystemManager"/>

    <reference bind="setEntityManager" cardinality="1..1"
               interface="dk.sdu.mmmi.swe.gtg.common.services.managers.IEntityManager"
               name="IEntityManager" policy="dynamic" unbind="removeEntityManager"/>

    <reference bind="setFamilyManager" cardinality="1..1"
               interface="dk.sdu.mmmi.swe.gtg.common.services.managers.IFamilyManager"
               name="IFamilyManager" policy="dynamic" unbind="removeFamilyManager"/>

    <reference bind="addPostEntityProcessingService" cardinality="0..n"
               interface="dk.sdu.mmmi.swe.gtg.common.services.entity.IPostEntityProcessingService"
               name="IPostEntityProcessingService" policy="dynamic" unbind="removePostEntityProcessingService"/>

    <reference bind="addEntityProcessingService" cardinality="0..n"
               interface="dk.sdu.mmmi.swe.gtg.common.services.entity.IEntityProcessingService"
               name="IEntityProcessingService" policy="dynamic" unbind="removeEntityProcessingService"/>
</component>